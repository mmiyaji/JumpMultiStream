{
  "manifest_version": 3,
  "name": "Jump MultiStream",
  "description": "Twitchで視聴中の配信を同時表示するための拡張機能です。別タブで表示したいTwitch配信ページを開いてから拡張機能のアイコンをクリックすると利用できます。",
  "version": "1.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["https://*.twitch.tv/*"],
  "permissions": ["tabs", "storage"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
